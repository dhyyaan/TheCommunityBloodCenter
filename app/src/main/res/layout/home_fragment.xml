<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/white"
    android:focusableInTouchMode="true">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/flDonation"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/custom_button"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="120dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvDonation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="" />
    <TextView
        android:id="@+id/tvLDonation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="Donation" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tvDCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16sp"
        android:drawableStart="@drawable/complete"
        android:drawableLeft="@drawable/complete"
        android:textColor="@android:color/white"
        android:text="Completed" />
</LinearLayout>




        </FrameLayout>
        <FrameLayout
            android:id="@+id/flVolunteer"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rectangle_dark_cream"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="120dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvVolunteer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#A01428"
                android:textSize="18sp"
                android:gravity="center"
                android:text="" />
            <TextView

                android:id="@+id/tvLVolunteer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#A01428"
                android:textSize="18sp"
                android:text="Volunteer" />
            <TextView
                android:id="@+id/tvVCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:drawableStart="@drawable/form_done"
                android:drawableLeft="@drawable/form_done"
                android:visibility="gone"
                android:textColor="#A01428"
                android:text="Completed" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
 <LinearLayout
     android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <FrameLayout
         android:id="@+id/flRecruit"
         android:layout_marginTop="6dp"
         android:layout_marginLeft="12dp"
         android:layout_marginStart="12dp"
         android:layout_marginRight="14dp"
         android:layout_marginEnd="14dp"
         android:layout_marginBottom="12dp"
         android:background="@drawable/rectangle_light_cream"
         android:layout_weight="1"
         android:layout_width="wrap_content"
         android:layout_height="120dp">
         <LinearLayout
             android:orientation="vertical"
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         <TextView

             android:id="@+id/tvRecruit"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:textColor="#A01428"
             android:textSize="18sp"
             android:text="" />
         <TextView
             android:paddingStart="4dp"
             android:paddingLeft="4dp"
             android:paddingEnd="4dp"
             android:paddingRight="4dp"

             android:id="@+id/tvLRecruit"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:textColor="#A01428"
             android:textSize="18sp"
             android:text="Recruit" />
         <TextView
             android:id="@+id/tvRCompleted"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:textSize="16sp"
             android:drawableStart="@drawable/form_done"
             android:drawableLeft="@drawable/form_done"
             android:visibility="gone"
             android:textColor="#A01428"
             android:text="Completed" />
         </LinearLayout>
     </FrameLayout>
     <FrameLayout
         android:id="@+id/flHost"
         android:layout_marginLeft="0dp"
         android:layout_marginStart="0dp"
         android:layout_marginRight="12dp"
         android:layout_marginEnd="12dp"
         android:layout_marginTop="6dp"
         android:layout_marginBottom="12dp"
         android:background="@drawable/rectangle_light_red"
         android:layout_weight="1"
         android:layout_width="wrap_content"
         android:layout_height="120dp">
         <LinearLayout
             android:orientation="vertical"
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         <TextView
             android:textSize="18sp"
             android:id="@+id/tvHost"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:textColor="@android:color/white"
             android:text="" />
         <TextView
             android:paddingLeft="18dp"
             android:paddingStart="18dp"
             android:paddingEnd="12dp"
             android:paddingRight="12dp"
             android:textSize="18sp"
             android:id="@+id/tvLHost"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:textColor="@android:color/white"
             android:text="Host" />
         <TextView
             android:id="@+id/tvHCompleted"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:textSize="16sp"
             android:visibility="gone"
             android:drawableStart="@drawable/complete"
             android:drawableLeft="@drawable/complete"
             android:textColor="@android:color/white"
             android:text="Completed" />
         </LinearLayout>
     </FrameLayout>
    </LinearLayout>


    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:id="@+id/tvAddNewDonation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/right_arrow"
        android:drawableRight="@drawable/right_arrow"
        android:textColor="#3C3C3C"
        android:gravity="left|center"
        android:text="Add New Donation" />
    <View
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#D0D0D0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:id="@+id/tvVolunteerHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/right_arrow"
        android:drawableRight="@drawable/right_arrow"
        android:gravity="left|center"
        android:textColor="#3C3C3C"
        android:text="Record Your Volunteer Hours" />
    <View
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#D0D0D0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:id="@+id/tvAddRecruitingEfferts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/right_arrow"
        android:drawableRight="@drawable/right_arrow"
        android:gravity="left|center"
        android:textColor="#3C3C3C"
        android:text="Record Your Recruiting Efforts" />
    <View
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#D0D0D0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:id="@+id/tvbloodDriveInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/right_arrow"
        android:drawableRight="@drawable/right_arrow"
        android:gravity="left|center"
        android:textColor="#3C3C3C"
        android:text="Enter Your Blood Drive Information" />
    <View
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#D0D0D0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/tvAchievementRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="left|center"
        android:textColor="#101010"
        android:text="Achievement Recognition" />
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        android:elevation="4dp"
        app:cardCornerRadius="4dp">
    <LinearLayout

        android:id="@+id/llVolunteerHours"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvUserVolunteerHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left|center"
            android:textColor="#AF3749"
            android:text="" />
        <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="left|center"
        android:textColor="#2A2A2A"
         android:layout_marginTop="2dp"
            android:text="" />
        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_weight="1"
                android:id="@+id/tvVerified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="left|center"
                android:textColor="#282828"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/unverified"
                android:text="" />
             <Space
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@drawable/fb_btn"
                android:id="@+id/btnFb"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="Share" />

            <TextView
                 android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#ffffff"
                android:background="@drawable/tweet_btn"
                android:gravity="center"
                android:id="@+id/btnTweet"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Tweet" />
        </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
