    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/tvThankMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="#292929"
        android:text="Thank you for being a blood donor with CBC.Record your donation information to track your progress" />
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/tvTitleRequire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#0A0A0A"
        android:text="Donation Requirement" />
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/tvTitleAdvice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textColor="#0A0A0A"
        android:text="Donate a minimum of 3 times over the course of your high school carrer" />
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/tvHighSchoolDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:textColor="#3F3F3F"
        android:drawableLeft="@drawable/heart"
        android:text="High school blood drive" />
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/tvCBCMobileBloodDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#3F3F3F"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/heart"
        android:text="CBC mobile blood drive" />
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/tvCBCDonorCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/heart"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:textColor="#3F3F3F"
        android:text="CBC Donor Center" />
    <LinearLayout
        android:layout_marginTop="12dp"
        android:background="#F6EDE4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:focusable="false"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:drawableRight="@drawable/calender"
            android:textSize="14sp"
            android:id="@+id/etDonationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Date of your blood donation" />
        <EditText
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="14sp"
            android:id="@+id/etDonationLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Location" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="#292929"
        android:text="Your personal dashboard will be updated once you submit this form.Please note all that achievements are subject to review and verification" />
    <FrameLayout
        android:id="@+id/ffRecordThisAchievement"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="12dp"
        android:background="#A61D31"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <TextView
            android:id="@+id/tvRecordThisAchievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:text="Record this achievement" />
    </FrameLayout>
</LinearLayout>
</ScrollView>
    <ProgressBar
        android:layout_marginBottom="40dp"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical" />
</FrameLayout>
